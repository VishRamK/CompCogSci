(game "Nim"
  (players 2)
  (equipment
    (heaps (sizes 3 4 5))
  )
  (rules
    (play
      (repeat
        (P1 P2)
        ; "some objects" â†’ unspecified max: allow any k in [1 .. heap_size]
        (remove mover
          (heap any)
          (count (range 1 (heap_size selected)))
        )
      )
    )
    (end
      (if (heaps_empty) (mover win))
    )
  )
)